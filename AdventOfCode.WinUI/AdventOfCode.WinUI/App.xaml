<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="AdventOfCode.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="using:AdventOfCode.WinUI.Converter"
    xmlns:local="using:AdventOfCode.WinUI">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="ms-appx:///Styles/FontSizes.xaml"/>
                <ResourceDictionary Source="ms-appx:///Styles/Thickness.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/TextBlock.xaml" />

                <ResourceDictionary>
                    <converter:InverseBooleanConverter x:Key="InverseBooleanConverter" />
                </ResourceDictionary>
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
