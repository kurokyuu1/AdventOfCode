{
  "NLog": {
    "extensions": [
      { "assembly": "NLog.Extensions.Logging" }
    ],
    "variables": {
      "logdir": "logs/${shortdate}",
      "loglayout": "[${longdate}] ${level:uppercase=true} - ${callsite:className=true:fileName=false:includeSourcePath=false:methodName=true}: ${message}"
    },
    "targets": {
      "logfile": {
        "type": "File",
        "fileName": "${logdir}/app.log",
        "layout": "${loglayout}"
      },
      "logconsole": {
        "type": "Console",
        "layout": "${loglayout}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "logconsole"
      },
      {
        "logger": "AdventOfCode.*",
        "minLevel": "Info",
        "writeTo": "logfile"
      }
    ]
  }
}
